{% extends 'base.html.twig' %}

{% block title %}New Activite
{% endblock %}

{% block body %}
	<h1 class="my-5">Créer une Activité</h1>

	{{form_start(form)}}

	{{form_start(form)}}

	<div class="form-group">
		<label for="">Nom</label>
		{{form_widget(form.Nom)}}
	</div>

	<div class="form-group">
		<label for="">Description</label>
		{{form_widget(form.Description)}}
	</div>

	<button class="btn btn-success mt-2 w-100">{{ button_label : 'Ajouter' }}</button>
	{{form_end(form)}}

	{{form_end(form)}}
	<a class="btn btn-info mt-2 w-100" href="{{ path('activite_index') }}">Retour à la liste</a>
{% endblock %}
