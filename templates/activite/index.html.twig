{% extends 'base.html.twig' %}

{% block title %}Activite index
{% endblock %}

{% block body %}
	<h1>Liste des activit√©s</h1>
	<a class="btn btn-success" href="{{ path('activite_new') }}">Create new</a>
	<table class="table">
		<thead>
			<tr>
				<th>User</th>
				<th>Nom</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for activite in activites %}
				<tr>
					<td>{{ activite.user.username}}</td>
					<td>{{ activite.Nom }}</td>
					<td>{{ activite.Description | raw }}</td>
					<td>
						<a class="btn btn-primary mb-2" href="{{ path('activite_show', {'id': activite.id}) }}">Voir</a>
						{% if app.user %}
							<a class="btn btn-warning" href="{{ path('activite_edit', {'id': activite.id}) }}">Editer</a>
							{{ include('activite/_delete_form.html.twig') }}
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
