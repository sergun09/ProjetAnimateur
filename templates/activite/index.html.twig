{% extends 'base.html.twig' %}

{% block title %}Activite index
{% endblock %}

{% block body %}
	<h1>Activite index</h1>
	<a class="btn btn-success" href="{{ path('activite_new') }}">Create new</a>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for activite in activites %}
				<tr>
					<td>{{ activite.id }}</td>
					<td>{{ activite.Nom }}</td>
					<td>{{ activite.Description | raw }}</td>
					<td>
						<a class="btn btn-primary mb-2" href="{{ path('activite_show', {'id': activite.id}) }}">show</a>
						<a class="btn btn-warning" href="{{ path('activite_edit', {'id': activite.id}) }}">edit</a>
						{{ include('activite/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
